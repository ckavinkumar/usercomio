<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Usercom | Change Password</title>

    <!-- external scripts -->
    <% include commoncss.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/internal/app.css" />


    <% include commonscripts.ejs %>

</head>
<body>

    <% include navigation.ejs %>

    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <h1>Change Password</h1>
            </div>
        </div>
        <br/><br/>

        <div class="row">
            <div class="col-md-12">

                <div class="form-group row">
                    <label for="ucchangepassword_password" class="col-sm-3 control-label text-right">New Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="ucchangepassword_password" placeholder="********">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="ucchangepassword_confirmpassword" class="col-sm-3 control-label text-right">Confirm Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="ucchangepassword_confirmpassword" placeholder="********">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" id="ucchangepassword_submit" class="btn btn-default">Save</button>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <script>

        UC_UserSession.user = <%- JSON.stringify(user) %>;

        var uc_main = new UC_MainController();
        uc_main.constructor();
        uc_main.userController.constructor();
    </script>

</body>
</html>
