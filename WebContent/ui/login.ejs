<% include partials/header.ejs %>
	<link rel="stylesheet" type="text/css" href="/css/external/jquery-ui.min.css" />
<link rel="stylesheet" type="text/css" href="/css/external/bootstrap/bootstrap.min.css" />
	 
	 <% if(global.prodEnvType) { %>
		<link rel="stylesheet" type="text/css" href="/dist/styles/login.min.css" />  
	<% }
	else
	{ %>
	    <link rel="stylesheet" type="text/css" href="/css/internal/login.css" />
	<%}%>
   

    <!-- external scripts -->
    <% include partials/commonscripts.ejs %>

    <!--- internal scripts --->
    <script type="text/javascript" src="./js/src/internal/accounts/login.js"></script>
</head>
  <body>
    <div class="UC_LoginContainerCls">
        <div class="UC_logo"><img src="../../images/app/usercomLogo.png" alt=""/></div>

            <form action="">
                <div class="form-group" style="overflow:auto">
                    <div class="col-sm-12">
                        <div class="ucLoginTextInput">
                            <div class="ucLoginEmailIcon"></div>
                            <input type="email" value="" class="form-control" id="uclogin_usernameinput" placeholder="Email">
                        </div>
                        
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                       <div class="ucLoginTextInput">
                        <div class="ucLoginPasswordIcon"></div>
                        <input type="password" value="" class="form-control" id="uclogin_passwordinput" placeholder="Password">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="checkbox">
                            
                            <div id="uclogin_forgotpasswordbtn">Forgot Password</div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="">
                        <button type="submit" id="uclogin_submitbtn" class="btn btn-default">Sign
                            in</button>
                        <div class="ucLoaderContent" id="ucLogin_loader" style="display: none;">Signing In...</div>
                    </div>
                </div>
        </form>
    	
	
	</div>
  </body>
  <script>
    var uc_login  = new UC_LoginController();
    uc_login.constructor();
  </script>
</html>
