<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Usercom | Edit System Details</title>

    <!-- external scripts -->
    <% include commoncss.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/internal/app.css" />


    <% include commonscripts.ejs %>

</head>
<body>

    <% include navigation.ejs %>

    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <h1>Edit System Details</h1>
            </div>
        </div>
        <br/><br/>

        <div class="row">
            <div class="col-md-12">

                <div class="form-group row">
                    <label for="uceditsystem_baseurl" class="col-sm-3 control-label text-right">Base URL (including port)</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="uceditsystem_baseurl" placeholder="http://localhost:3000">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" id="uceditsystem_submit" class="btn btn-default">Save</button>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <script>

        UC_UserSession.user = <%- JSON.stringify(user) %>;

        var uc_main = new UC_MainController();
        uc_main.constructor();
        uc_main.userController.constructor();
        uc_main.userController.config = <%- JSON.stringify(config) %>;
        uc_main.userController.editSystemHandler();
    </script>

</body>
</html>
